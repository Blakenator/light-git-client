{
  "name": "light-git-client",
  "version": "0.12.3",
  "description": "A light git client",
  "author": {
    "name": "Blake Stacks",
    "email": "blake@blakestacks.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blakenator/light-git-client.git"
  },
  "main": "main.js",
  "private": false,
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps",
    "ng": "ng",
    "start": "ELECTRON_ENV=development npm-run-all -p ng:serve electron:serve",
    "browserify": "browserify -x node_modules/electron/**/* --node main.js -o main.bundle.js",
    "build": "npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "npx del-cli dist/**/* && ng build --watch",
    "electron:tsc": "npx tsc --p tsconfig-electron.json --inlineSourceMap || echo",
    "electron:serve": "nodemon --ignore dist --ignore testing --watch ./ -e ts,html,scss --exec \"npm run electron:tsc && electron --inspect --remote-debugging-port=9223 .\"",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "release:linux": "npm run build:prod && npx electron-builder build --linux -p always",
    "release:windows": "npm run build:prod && npx electron-builder build --windows -p always",
    "release:mac": "npm run build:prod && npx electron-builder build --mac -p always",
    "test": "npx ng test",
    "test-watch": "npx ng test --watch",
    "test-node-watch": "nodemon --watch testing --watch git --watch shared -e ts --exec \"npm run electron:tsc && npm run test-node\"",
    "test-node": "npm run electron:tsc && nyc -r lcov -e .ts -x \"*.spec.ts\" jasmine-ts",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/animations": "20.0.6",
    "@angular/cdk": "^20.0.5",
    "@angular/localize": "^20.0.6",
    "@angular/material": "^20.0.5",
    "@juggle/resize-observer": "^3.2.0",
    "@ng-bootstrap/ng-bootstrap": "^19.0.1",
    "@types/node-notifier": "0.0.28",
    "browserify": "^16.2.3",
    "codelyzer": "^6.0.0",
    "electron-editor-context-menu": "^1.1.1",
    "electron-log": "^4.0.3",
    "electron-updater": "^4.3.5",
    "fs-extra": "^10.1.0",
    "highlight.js": "^11.11.1",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "ngx-highlightjs": "^14.0.1",
    "ngx-infinite-scroll": "^20.0.0",
    "node-notifier": "^9.0.0",
    "nodemon": "^2.0.7",
    "opn": "^5.3.0",
    "prettier": "^2.7.1",
    "rxjs": "^7.8.2",
    "serialize-error": "^3.0.0",
    "tslib": "^2.4.1",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.5",
    "@angular/cli": "^20.0.5",
    "@angular/common": "20.0.6",
    "@angular/compiler": "20.0.6",
    "@angular/compiler-cli": "20.0.6",
    "@angular/core": "20.0.6",
    "@angular/forms": "20.0.6",
    "@angular/language-service": "20.0.6",
    "@angular/platform-browser": "20.0.6",
    "@angular/platform-browser-dynamic": "20.0.6",
    "@angular/router": "20.0.6",
    "@anthropic-ai/claude-code": "^1.0.43",
    "@electron/packager": "^18.3.6",
    "@eslint/js": "^9.30.1",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/jasmine": "^3.6.3",
    "@types/jasminewd2": "^2.0.8",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.6",
    "@types/serialize-error": "^2.1.0",
    "angular-eslint": "20.1.1",
    "core-js": "2.5.7",
    "cpx": "^1.5.0",
    "del-cli": "^5.0.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "jasmine": "^3.6.4",
    "jasmine-core": "^3.6.0",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "4.1.5",
    "nyc": "^14.1.1",
    "ts-node": "^10.9.1",
    "tslint": "~6.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.34.1",
    "wait-on": "3.2.0",
    "webdriver-manager": "12.1.0",
    "zone.js": "~0.15.1"
  },
  "browserify": {
    "paths": [
      "./shared"
    ]
  },
  "resolutions": {
    "webpack": "^5.0.0"
  }
}
