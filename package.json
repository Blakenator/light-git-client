{
  "name": "light-git-client",
  "version": "0.6.4",
  "description": "A light git client",
  "author": {
    "name": "Blake Stacks",
    "email": "blake@blakestacks.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blakenator/light-git-client.git"
  },
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps ",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "browserify": "browserify -x node_modules/electron/**/* --node main.js -o main.bundle.js",
    "build": "npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "del-cli dist/**/* && ng build --watch \r\n",
    "electron:tsc": "tsc main.ts --lib es5,es6,dom || echo",
    "electron:serve": "nodemon --watch src --watch shared --watch git --watch dist --watch main.ts -e ts,html,scss --exec \"npm run electron:tsc && electron --inspect .\"",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "release": "npm run build:prod && npx electron-builder build --windows --linux -p always",
    "release:mac": "npm run build:prod && npx electron-builder build --mac -p always"
  },
  "dependencies": {
    "@ng-bootstrap/ng-bootstrap": "^4.0.0",
    "browserify": "^16.2.3",
    "codelyzer": "^4.4.2",
    "electron-log": "^2.2.14",
    "electron-updater": "^4.0.5",
    "highlight.js": "^9.12.0",
    "ng-diff-match-patch": "^3.0.1",
    "ngx-highlightjs": "^3.0.0",
    "ngx-infinite-scroll": "^6.0.1",
    "node-notifier": "^5.2.1",
    "nodemon": "^1.17.5",
    "opn": "^5.3.0",
    "pretty-checkbox": "^3.0.3",
    "serialize-error": "^3.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.11.0",
    "@angular/cli": "7.1.0",
    "@angular/common": "7.1.1",
    "@angular/compiler": "7.1.1",
    "@angular/compiler-cli": "7.1.1",
    "@angular/core": "7.1.1",
    "@angular/forms": "7.1.1",
    "@angular/http": "7.1.1",
    "@angular/language-service": "7.1.1",
    "@angular/platform-browser": "7.1.1",
    "@angular/platform-browser-dynamic": "7.1.1",
    "@angular/router": "7.1.1",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/node": "10.12.11",
    "core-js": "2.5.7",
    "del-cli": "^1.1.0",
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "electron-packager": "^12.1.2",
    "electron-reload": "^1.2.5",
    "npm-run-all": "4.1.5",
    "npx": "10.2.0",
    "rxjs": "6.3.3",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.1.6",
    "wait-on": "3.2.0",
    "webdriver-manager": "12.1.0",
    "zone.js": "0.8.26"
  },
  "browserify": {
    "paths": [
      "./shared"
    ]
  }
}
