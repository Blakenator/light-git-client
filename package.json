{
  "name": "light-git-client",
  "version": "0.3.1",
  "description": "A light git client",
  "author": {
    "name": "Blake Stacks",
    "email": "blake@blakestacks.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Blakenator/light-git-client.git"
  },
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npx electron-builder install-app-deps ",
    "ng": "ng",
    "start": "npm-run-all -p ng:serve electron:serve",
    "browserify": "browserify -x node_modules/electron/**/* --node main.js -o main.bundle.js",
    "build": "npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "del-cli dist/**/* && ng build --watch \r\n",
    "electron:tsc": "tsc main.ts --lib es5,es6,dom || echo",
    "electron:serve": "nodemon --watch src --watch shared --watch git --watch dist --watch main.ts -e ts,html,scss --exec \"npm run electron:tsc && electron .\"",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "release": "npm run build:prod && npx electron-builder build --windows -p always"
  },
  "dependencies": {
    "browserify": "^16.2.2",
    "codelyzer": "^4.4.2",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.10",
    "node-notifier": "^5.2.1",
    "nodemon": "^1.17.5",
    "opn": "^5.3.0",
    "pretty-checkbox": "^3.0.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.8",
    "@angular/cli": "6.0.3",
    "@angular/common": "6.0.3",
    "@angular/compiler": "6.0.3",
    "@angular/compiler-cli": "6.0.3",
    "@angular/core": "6.0.3",
    "@angular/forms": "6.0.3",
    "@angular/http": "6.0.3",
    "@angular/language-service": "6.0.3",
    "@angular/platform-browser": "6.0.3",
    "@angular/platform-browser-dynamic": "6.0.3",
    "@angular/router": "6.0.3",
    "@ngx-translate/core": "10.0.1",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/node": "8.9.4",
    "core-js": "2.5.6",
    "del-cli": "^1.1.0",
    "electron": "2.0.2",
    "electron-builder": "20.15.1",
    "electron-packager": "^12.1.0",
    "electron-reload": "1.2.2",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "rxjs": "6.1.0",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  },
  "browserify": {
    "paths": [
      "./shared"
    ]
  }
}
