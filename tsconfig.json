{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2020",
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "inlineSourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "es5",
      "es6",
      "es7",
      "dom"
    ],
    "types": [
      "./index.d.ts"
    ],
    "useDefineForClassFields": false
  }
}
